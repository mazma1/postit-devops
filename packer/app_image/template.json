{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "ami_id": "ami-af79ebc0"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "source_ami": "{{user `ami_id`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "app-{{timestamp}}",
      "tags": {
        "name": "App Image"
      }

    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /home/ubuntu/post-it",
        "sudo chmod -R 777 /home/ubuntu/post-it"
      ]
    },
    {
      "type":"file",
      "direction":"upload",
      "source":"/home/jenkins/archive",
      "destination":"/home/ubuntu/post-it"
    },
    {
      "type":"shell",
      "inline": [
        "sudo cp /home/ubuntu/post-it/archive/packer/app_image/postit.conf /etc/systemd/system/postit.service"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo chmod +x /home/ubuntu/post-it/archive/packer/app_image/scripts/node.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo systemctl daemon-reload",
        "sudo systemctl enable postit.service",
        "sudo systemctl start postit.service"
      ]
    }
  ]
}